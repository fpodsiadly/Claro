{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "../dist"
      }
    },
    {
      "src": "backend/api/search.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/api/index.py"
    },
    {
      "src": "../(.*)",
      "dest": "../dist/$1"
    }
  ],
  "devCommand": "cd frontend && npm run dev"
}