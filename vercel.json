{
  "version": 2,
  "builds": [
    {
      "src": "frontend/dist/**",
      "use": "@vite/build",
      "config": {
        "distDir": "frontend/dist",
        "buildCommand": "cd frontend && npm install && npm run build"
      }
    },
    {
      "src": "backend/api/search.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/api/*.py"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2))",
      "dest": "frontend/dist/$1"
    }
  ],
  "devCommand": "cd frontend && npm run dev"
}